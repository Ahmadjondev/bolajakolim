# ── Backend production environment ─────────────────────────────────────────
# Copy this to /home/deploy/bolajakolim/backend/.env

# SECURITY — generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=CHANGE_ME_TO_A_STRONG_RANDOM_KEY
DEBUG=False
ALLOWED_HOSTS=startup.soften.uz,www.startup.soften.uz

# ── Database (PostgreSQL) ─────────────────────────────────────────────────
DATABASE_URL=postgres://bolajakolim_user:STRONG_DB_PASSWORD@localhost:5432/bolajakolim_db

# ── Google OAuth ──────────────────────────────────────────────────────────
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ── Celery / Redis ────────────────────────────────────────────────────────
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/1
CELERY_TASK_ALWAYS_EAGER=False

# ── CORS ──────────────────────────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=https://startup.soften.uz

# ── Frontend URL ──────────────────────────────────────────────────────────
FRONTEND_URL=https://startup.soften.uz
